<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/defaultCardElevation"
        app:cardCornerRadius="@dimen/defaultCornerRadius"
        app:cardBackgroundColor="?attr/themeColorPrimaryLight"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacingRegular">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/layout_header_fragment_profile_image_avatar"
                android:layout_width="@dimen/sizeAvatarRegular"
                android:layout_height="@dimen/sizeAvatarRegular"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/spacingRegular"
                android:src="@drawable/ic_face" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/layout_header_fragment_profile_image_avatar"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_header_fragment_profile_text_view_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacingSmallest"
                    tools:text="Foundation"
                    android:textSize="?attr/themeFontSizeBody"
                    android:fontFamily="?attr/themeFontFamilyRegular"
                    android:textColor="?attr/themeColorFontNormal"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/layout_header_fragment_profile_text_view_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="\@foundation"
                    android:textSize="?attr/themeFontSizeSub"
                    android:fontFamily="?attr/themeFontFamilyRegular"
                    android:textColor="?attr/themeColorFontDim"/>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>