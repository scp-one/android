<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_option_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacingRegular"
            android:textSize="?attr/themeFontSizeSub"
            android:fontFamily="?attr/themeFontFamilyBold"
            android:textColor="?attr/themeColorFontDim"
            android:lines="1"
            android:ellipsize="end" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacingSmallPlus"
            app:cardElevation="@dimen/defaultCardElevation"
            app:cardCornerRadius="@dimen/defaultCornerRadius"
            app:cardBackgroundColor="?attr/themeColorPrimaryLight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include android:id="@+id/option_0" layout="@layout/layout_list_option"/>
                <include android:id="@+id/option_1" layout="@layout/layout_list_option"/>
                <include android:id="@+id/option_2" layout="@layout/layout_list_option"/>
                <include android:id="@+id/option_3" layout="@layout/layout_list_option"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>