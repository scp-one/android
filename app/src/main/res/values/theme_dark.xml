<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DARK THEME -->
    <style name="Theme.Dark" parent="Theme.Base">
        <!-- colors - primaries -->
        <item name="themeColorPrimaryLight">@color/darkThemeColorPrimaryLight</item>
        <item name="themeColorPrimary">@color/darkThemeColorPrimary</item>
        <item name="themeColorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <!-- colors - buttons -->
        <item name="themeColorBtnHighlightedBorderless">@color/darkThemeColorBtnHighlightedBorderless</item>
        <item name="themeColorBtnHighlighted">@color/darkThemeColorBtnHighlighted</item>
        <item name="themeColorBtnNormal">@color/darkThemeColorBtnNormal</item>
        <item name="themeColorBtnCancel">@color/darkThemeColorBtnCancel</item>
        <item name="themeColorBtnNavBarActive">@color/darkThemeColorBtnNavBarActive</item>
        <item name="themeColorBtnNavBarInactive">@color/darkThemeColorBtnNavBarInactive</item>
        <!-- colors - fonts -->
        <item name="themeColorFontBright">@color/darkThemeColorFontBright</item>
        <item name="themeColorFontNormal">@color/darkThemeColorFontNormal</item>
        <item name="themeColorFontDim">@color/darkThemeColorFontDim</item>
        <item name="themeColorFontTextFieldText">@color/darkThemeColorFontTextFieldText</item>
        <item name="themeColorFontTextFieldHint">@color/darkThemeColorFontTextFieldHint</item>
        <!-- colors - interface elements -->
        <item name="themeColorTextField">@color/darkThemeColorTextField</item>
        <item name="themeColorTextFieldHighlighted">@color/darkThemeColorTextFieldHighlighted</item>
        <item name="themeColorNavBar">@color/darkThemeColorNavBar</item>

        <!-- android elements -->
        <item name="android:statusBarColor">@color/darkThemeColorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/darkThemeColorNavBar</item>
    </style>

    <!-- FONT SIZES -->
    <style name="Theme.Dark.FontSmall" parent="Theme.Dark">
        <item name="themeFontSizeSub">@dimen/fontSizeSmallSub</item>
        <item name="themeFontSizeBody">@dimen/fontSizeSmallBody</item>
        <item name="themeFontSizeHeadline">@dimen/fontSizeSmallHeadline</item>
    </style>

    <style name="Theme.Dark.FontRegular" parent="Theme.Dark">
        <item name="themeFontSizeSub">@dimen/fontSizeRegularSub</item>
        <item name="themeFontSizeBody">@dimen/fontSizeRegularBody</item>
        <item name="themeFontSizeHeadline">@dimen/fontSizeRegularHeadline</item>
    </style>

    <style name="Theme.Dark.FontLarge" parent="Theme.Dark">
        <item name="themeFontSizeSub">@dimen/fontSizeLargeSub</item>
        <item name="themeFontSizeBody">@dimen/fontSizeLargeBody</item>
        <item name="themeFontSizeHeadline">@dimen/fontSizeLargeHeadline</item>
    </style>
</resources>
